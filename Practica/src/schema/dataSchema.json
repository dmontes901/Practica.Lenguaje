{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": {
      "type": "object",
      "properties": {
        "text": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": { "type": "string" },
              "lang": { "type": "string" }
            },
            "required": ["value", "lang"]
          }
        }
      },
      "required": ["text"]
    },
    "geographicCoverages": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "lang": { "type": "string" }
                      },
                      "required": ["value", "lang"]
                    }
                  }
                }
              }
            },
            "required": ["id", "name"]
          }
        }
      },
      "required": ["resource"]
    }
  },
  "required": ["id", "name", "geographicCoverages"]
}
